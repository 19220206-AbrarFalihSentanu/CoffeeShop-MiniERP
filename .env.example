# Eureka Kopi - Environment Configuration
# Copy this file to .env and adjust the values

APP_NAME="Eureka Kopi"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# DATABASE CONFIGURATION
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=mini_erp_kopi
DB_USERNAME=root
DB_PASSWORD=

# QUEUE CONFIGURATION
# Use 'database' for production with queue worker
# Use 'sync' for development (immediate execution)
QUEUE_CONNECTION=database

# SESSION & CACHE
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_DRIVER=file
FILESYSTEM_DISK=public

BROADCAST_DRIVER=log

# MAIL CONFIGURATION
# For development: use 'log' (emails saved to storage/logs)
# For production: use 'smtp' with Gmail App Password
MAIL_MAILER=log
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# To use Gmail SMTP:
# 1. Enable 2FA on your Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the 16-character App Password as MAIL_PASSWORD

# OPTIONAL SERVICES
MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=ap1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
